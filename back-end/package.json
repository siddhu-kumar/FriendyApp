    "crypto": "^1.0.1",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.12.0",
    "mongoose": "^8.9.5",
    "mongoose-unique-validator": "^5.0.1",
    "nodemailer": "^6.9.16",
    "nodemon": "^3.1.9",
    "otplib": "^12.0.1",
    "socket.io": "^4.8.1",
    "uuid": "^11.0.5"
  },
  "description": "",
